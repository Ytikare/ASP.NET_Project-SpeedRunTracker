@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboad";
}
    <h3 class="text-center mt-2">@ViewData["Title"]</h3>
<div class="row mt-5 gap-3">
    <div class="col card text-white bg-primary mb-3">
          <div class="card-header">SpeedRuns waiting verification</div>
              <div class="card-body" id="speedrunCardBody">
                @foreach (var speedRun in Model.SpeedRuns)
                {
                    <div class="container mb-3 row">
                        <div class="hidden col-md-auto text-center">
                            <img class="object-fit-container" alt="image alt" src="@speedRun.GameImageUrl" height="100" width="72" />
                        </div >
                         <div class="col">
                            <table class="table table-hover" >
                                <thead>
                                    <tr>
                                        <th class="px-2" scope="col">@speedRun.GameTitle</th>
                                        <th class="px-0" scope="col"></th>
                                        <th class="px-1" scope="col">@speedRun.SpeedRunnerName</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="table-secondary">
                                        <td class="px-2" >@speedRun.Category</td>
                                        <td class="px-0" >@speedRun.SubmitionDate</td>
                                        <td class="px-1" >@speedRun.Duration</td>
                                    </tr>
                                </tbody>
                            </table>
                         </div>
                         <div class="col-3 text-center align-self-center">
                             <a asp-controller="SpeedRuns" asp-action="Details" asp-route-speedRunId="@speedRun.Id" type="button" class="text-warning-emphasis btn btn-warning">
                                 Check speedrun
                             </a>
                         </div>
                    </div>
                 }
          </div>
    </div>
    <div class="col-3 card text-white bg-primary mb-3">
          <div class="card-header">Support Ticktes</div>
          <hr />
          @foreach (var ticket in Model.SupportTickets)
         {
            <div class="card border-secondary mb-3" style="max-width: 20rem;">
                <div class="card-body">
                     <h4 class="card-title">@ticket.Title</h4>
                     <p class="card-text">@ticket.Content</p>
                     <span class="text">Ticket by: @ticket.Submitter</span>
                </div>
                <div class="d-flex justify-content-center gap-2 mb-2">
                        <a asp-controller="Support" asp-action="CompleteTicket" asp-route-ticketId="@ticket.Id" type="button" class="btn btn-success">Complete</a>
                        <a asp-controller="Support" asp-action="DeclineTIcket" asp-route-ticketId="@ticket.Id" type="button" class="btn btn-danger">Decline</a>
                </div>
            </div>
         }
    </div>
</div>
