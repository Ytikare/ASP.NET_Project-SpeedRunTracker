@model SpeedRunFormModel

@{
    ViewBag.Title = "Submit SpeedRun";
}
    <div class="row">
            <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="SpeedRunVideoUrl"></label>
                        <input asp-for="SpeedRunVideoUrl" class="form-control" placeholder="">
                        <span asp-validation-for="SpeedRunVideoUrl" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SpeedRunTime"></label>
                        <input asp-for="SpeedRunTime" class="form-control" placeholder="Time should be in format- hh:mm:ss.mmm">
                        <span asp-validation-for="SpeedRunTime" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GameId" class="mb-1"></label>
                        <div class="input-group mb-3">
                            <input type="text" id="gameTitleInput" class="form-control" placeholder="Enter game title here..."/>
                            <button class="btn btn-primary" type="button" id="loadGames">Search for title</button>
                        </div>
                        <select asp-for="GameId" id="gameTitleSelect" class="form-control"></select>
                        <span asp-validation-for="GameId" class="small text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" id="gameCategorySelect" class="form-control"></select>
                        <span asp-validation-for="CategoryId" class="small text-danger"></span>
                    </div>

                    <div class="text-center">
                        <input class="btn btn-primary mt-3" type="submit" value="Save" />
                    </div>
                </form>
            </div>
    </div>
@section Scripts
{
    <script src="~/js/SpeedRunSubmit.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
